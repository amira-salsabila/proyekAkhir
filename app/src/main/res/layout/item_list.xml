<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemlist_cardView"
    android:layout_width="330dp"
    android:layout_height="135dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/colorLightGray"
    app:cardCornerRadius="24dp">

    <TextView
        android:id="@+id/holder_brownAccent"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:background="@drawable/item_list_number_bg"
        android:paddingTop="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:id="@+id/itemlist_AgencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"
            android:text="Agency Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemlist_AgencyCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Agency City"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/itemlist_AgencyPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone Number"
                android:textAlignment="center"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemlist_AgencyAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Address\nAddress Detail\nAgencyDetails\nDetailsAgency"
            android:textColor="@color/colorDarkGray"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>