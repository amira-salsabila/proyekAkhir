<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.activity.EditActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/header_profile_bg"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT PROFILE"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editActivity_editTextUserName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/icon_username"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_marginTop="35dp"
                android:padding="15dp"
                android:background="@drawable/form_bg"/>


            <EditText
                android:id="@+id/editActivity_editTextEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/icon_email"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/form_bg"/>

            <EditText
                android:id="@+id/editActivity_editTextPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/icon_password"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/form_bg"/>

            <EditText
                android:id="@+id/editActivity_editTextPasswordConfirm"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/icon_password"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/form_bg"/>

            <TextView
                android:id="@+id/editActivity_textView_BackToProfileRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Cancel Edit? Back to Home"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="40dp"/>

            <Button
                android:id="@+id/editActivity_buttonEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorLightGray"
                android:background="@drawable/form_button_bg"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@color/colorPrimary"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>